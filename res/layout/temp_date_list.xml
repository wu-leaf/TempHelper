<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@drawable/temp_list_selector">
       
     <ImageView
		android:id="@+id/temp_picture"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_centerInParent="true"
		
		/>
      
        <TextView
		android:id="@+id/temp_Time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="19sp"
		android:textColor="#0e272c"
		android:gravity="center_vertical"
		android:layout_toLeftOf="@id/temp_picture" />   
		    	
    	<TextView
		android:id="@+id/temp_Vaule"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="30sp" 
		android:textColor="#0e272c"
		android:layout_toRightOf="@id/temp_picture" />     
</RelativeLayout>
